{
	"number_of_shards": 5,
	"number_of_replicas": 2,
	"max_result_window" : 10000000,
	"index": {
		"analysis": {
			"analyzer": {
				"korean": {
					"filter": [
						"npos_filter",
						"nori_readingform",
						"lowercase",
						"synonym_filter"
					],
					"tokenizer": "nori_user_dict"
				}
			},
			"tokenizer": {
				"nori_user_dict": {
					"type": "nori_tokenizer",
					"decompound_mode": "mixed",
					"user_dictionary": "userdict_ko.txt"
				}
			},
			"filter": {
				"synonym_filter": {
					"type": "synonym",
					"synonyms_path": "synonym.txt"
				},
				"npos_filter": {
					"type": "nori_part_of_speech",
